# ===========================================
# 本地开发环境配置
# ===========================================

# 环境标识
NODE_ENV=development
ENVIRONMENT=local
VERSION=1.0.0-dev

# 端口配置
PORT=3001
FRONTEND_PORT=3000

# 数据库配置 (本地 Supabase)
SUPABASE_URL=https://your-local-project.supabase.co
SUPABASE_ANON_KEY=your-local-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-local-service-role-key

# 认证配置
JWT_SECRET=local-dev-secret-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10

# 支付配置 (Stripe 测试环境)
STRIPE_SECRET_KEY=sk_test_your-local-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-local-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-local-webhook-secret

# CORS 配置
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# 限流配置 (开发环境宽松)
RATE_LIMIT_MAX_REQUESTS=10000
RATE_LIMIT_WINDOW_MS=900000

# 日志配置
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 监控配置
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# 缓存配置
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# 前端配置
NEXT_PUBLIC_API_URL=http://localhost:3001/v1
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-local-publishable-key

# Sentry 监控配置 (开发环境)
SENTRY_DSN=https://your-dev-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=ticketing-ai-dev
SENTRY_AUTH_TOKEN=your-dev-auth-token

# 系统配置
BUILD_DATE=2024-12-01
REQUEST_ID_HEADER=x-request-id
