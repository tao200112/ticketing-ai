# ===========================================
# Preview 环境配置
# ===========================================

# 环境标识
NODE_ENV=production
ENVIRONMENT=preview
VERSION=1.0.0-preview

# 端口配置
PORT=3001
FRONTEND_PORT=3000

# 数据库配置 (Preview Supabase)
SUPABASE_URL=https://your-preview-project.supabase.co
SUPABASE_ANON_KEY=your-preview-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-preview-service-role-key

# 认证配置
JWT_SECRET=your-preview-jwt-secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# 支付配置 (Stripe 测试环境)
STRIPE_SECRET_KEY=sk_test_your-preview-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-preview-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-preview-webhook-secret

# CORS 配置
CORS_ORIGIN=https://preview.ticketing-ai.com
CORS_CREDENTIALS=true

# 限流配置
RATE_LIMIT_MAX_REQUESTS=5000
RATE_LIMIT_WINDOW_MS=900000

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10

# 监控配置
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# 缓存配置
REDIS_URL=redis://preview-redis:6379
CACHE_TTL=1800

# 前端配置
NEXT_PUBLIC_API_URL=https://preview-api.ticketing-ai.com/v1
NEXT_PUBLIC_SITE_URL=https://preview.ticketing-ai.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-preview-publishable-key

# Sentry 监控配置 (Preview 环境)
SENTRY_DSN=https://your-preview-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=ticketing-ai-preview
SENTRY_AUTH_TOKEN=your-preview-auth-token

# 系统配置
BUILD_DATE=2024-12-01
REQUEST_ID_HEADER=x-request-id
