# ===========================================
# 生产环境配置
# ===========================================

# 环境标识
NODE_ENV=production
ENVIRONMENT=production
VERSION=1.0.0

# 端口配置
PORT=3001
FRONTEND_PORT=3000

# 数据库配置 (生产 Supabase)
SUPABASE_URL=https://your-prod-project.supabase.co
SUPABASE_ANON_KEY=your-prod-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-prod-service-role-key

# 认证配置
JWT_SECRET=your-production-jwt-secret-very-secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=14

# 支付配置 (Stripe 生产环境)
STRIPE_SECRET_KEY=sk_live_your-prod-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-prod-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-prod-webhook-secret

# CORS 配置
CORS_ORIGIN=https://ticketing-ai.com
CORS_CREDENTIALS=true

# 限流配置 (生产环境严格)
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# 日志配置
LOG_LEVEL=warn
LOG_FILE=logs/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=20

# 监控配置
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=15000

# 缓存配置
REDIS_URL=redis://prod-redis:6379
CACHE_TTL=3600

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-prod-email@gmail.com
SMTP_PASS=your-prod-app-password

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png

# 安全配置
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# 前端配置
NEXT_PUBLIC_API_URL=https://api.ticketing-ai.com/v1
NEXT_PUBLIC_SITE_URL=https://ticketing-ai.com
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-prod-publishable-key

# Sentry 监控配置 (生产环境)
SENTRY_DSN=https://your-prod-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=ticketing-ai-prod
SENTRY_AUTH_TOKEN=your-prod-auth-token

# 系统配置
BUILD_DATE=2024-12-01
REQUEST_ID_HEADER=x-request-id